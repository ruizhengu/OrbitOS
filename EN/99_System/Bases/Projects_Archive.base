filters:
  and:
    - file.ext == "md"
    - or:
        - type == "inbox"
        - type == "project"
    - not:
        - file.inFolder("99_System/Templates")
formulas:
  display_title: file.asLink(if(title != "", title, file.basename.replace("_", " ")))
  priority_label: if(priority == "P0", "üî• Critical", if(priority == "P1", "‚ö° High", if(priority == "P2", "üìå Medium", if(priority == "P3", "üìã Low", "üí≠ Someday"))))
properties:
  formula.display_title:
    displayName: Title
  formula.priority_label:
    displayName: Priority
  status:
    displayName: Status
  area:
    displayName: Area
  topic:
    displayName: Topic
views:
  - type: table
    name: ‚è∏Ô∏è On Hold
    filters:
      and:
        - type == "project"
        - status == "on-hold"
    order:
      - formula.display_title
      - formula.priority_label
      - due
      - area
  - type: table
    name: ‚úÖ Completed Projects
    filters:
      and:
        - type == "project"
        - status == "done"
    order:
      - formula.display_title
      - area
  - type: table
    name: ‚úÖ Processed Inbox
    filters:
      and:
        - type == "inbox"
        - status == "processed"
    order:
      - formula.display_title
      - topic
    columnSize:
      formula.display_title: 285
